<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/settings_title">

    <EditTextPreference
        android:defaultValue="@string/search_query_default"
        android:inputType="text"
        android:key="@string/search_query_key"
        android:selectAllOnFocus="true"
        android:title="@string/search_query_label" />

    <ListPreference
        android:defaultValue="@string/order_by_deafult"
        android:entries="@array/settings_order_by_labels"
        android:entryValues="@array/settings_order_by_values"
        android:key="@string/order_by_key"
        android:title="@string/order_by_label" />

</PreferenceScreen>